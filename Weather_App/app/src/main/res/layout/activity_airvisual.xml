<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/airvisual_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:navigationContentDescription="@string/abc_action_bar_up_description"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_action_navigation_arrow_back"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AirVisual"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:background="@color/grey_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/airvisual_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/medical_mask"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/airvisual_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/airvisual_aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="US AQI:"/>
            <TextView
                android:id="@+id/airvisual_mainus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác nhân ô nhiễm chính:"/>
            <TextView
                android:id="@+id/airvisual_collusion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/airvisual_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/airvisual_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành phố:"/>
        <TextView
            android:id="@+id/airvisual_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quốc gia:"/>
        <TextView
            android:id="@+id/airvisual_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhiệt độ:"/>
        <TextView
            android:id="@+id/airvisual_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Áp suất không khí:"/>
        <TextView
            android:id="@+id/airvisual_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Độ ẩm:"/>
        <TextView
            android:id="@+id/airvisual_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tốc độ gió:"/>
        <TextView
            android:id="@+id/airvisual_wind_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hướng gió:"/>
        <TextView
            android:id="@+id/airvisual_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật lần cuối:"/>
    </LinearLayout>


</LinearLayout>